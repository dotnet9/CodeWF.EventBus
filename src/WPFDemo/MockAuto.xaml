<Window x:Class="WPFDemo.MockAuto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="Automatic" Height="400" Width="550">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Product ID：" />
            <TextBox x:Name="TxtMessage" Width="200" />
            <Button Content="Delete Product" Click="SendMessage_OnClick" Margin="10 0"/>
            <Button Content="Unsubscribe Message" x:Name="BtnEvent" Click="SubscribeOrUnsubscribe_OnClick"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
            <TextBlock Text="Message：" VerticalAlignment="Center"/>
            <TextBox TextWrapping="Wrap" x:Name="TxtLog" Width="450" Height="300"/>
        </StackPanel>
    </StackPanel>
</Window>