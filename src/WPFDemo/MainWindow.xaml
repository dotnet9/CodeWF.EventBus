<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="消息：" />
            <TextBox x:Name="TxtMessage" Width="200" />
            <Button Content="发送" Click="SendMessage_OnClick"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0 10">
            <Button Content="手动订阅" Click="ManuSubscribe_OnClick"/>
            <Button Content="取消手动订阅" Margin="5 0" Click="ManuUnsubscribe_OnClick"/>
            <Button Content="自动订阅" Click="AutoSubscribe_OnClick"/>
            <Button Content="取消自动订阅" Margin="5 0" Click="AutoUnsubscribe_OnClick"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="消息：" />
            <TextBox TextWrapping="Wrap" x:Name="TxtLog" Width="300" Height="300"/>
        </StackPanel>
    </StackPanel>
</Window>